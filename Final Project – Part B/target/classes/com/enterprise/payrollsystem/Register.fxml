<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="300" prefWidth="300" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.enterprise.payrollsystem.RegisterController">
   <children>
      <Label layoutX="100.0" layoutY="30.0" text="Username" />
      <TextField fx:id="usernameField" layoutX="100.0" layoutY="50.0" />
      <Label layoutX="100.0" layoutY="90.0" text="Password" />
      <PasswordField fx:id="passwordField" layoutX="100.0" layoutY="110.0" />
      <Label layoutX="100.0" layoutY="150.0" text="Role" />
      <TextField fx:id="roleField" layoutX="100.0" layoutY="170.0" />
      <Button layoutX="100.0" layoutY="210.0" text="Register" onAction="#register"/>
      <Button layoutX="100.0" layoutY="240.0" text="Login" onAction="#navigateToLogin"/>
   </children>
</AnchorPane>